<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SettingsTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/YPBlack"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/artWorkImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_gravity="center_vertical"
        android:paddingVertical="@dimen/padding_8"
        android:paddingStart="@dimen/padding_12"
        android:src="@drawable/art_work">

    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_8"
        android:paddingVertical="@dimen/padding_18">

        <TextView
            android:id="@+id/trackNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:textFontWeight="400"
            android:textSize="@dimen/textSize_16"
            tools:text="Yesterday (Remastered 2009)">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp">

            <TextView
                android:id="@+id/artistNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TrackSmallTVStyle"
                tools:text="The Beatles">
            </TextView>

            <ImageView
                android:id="@+id/separatorImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/icdot"
                android:layout_gravity="center"
                app:tint="@color/white">
            </ImageView>

            <TextView
                android:id="@+id/trackTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TrackSmallTVStyle"
                tools:text="2:55">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/arrow_forward"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        app:tint="@color/white">
    </ImageView>

</LinearLayout>