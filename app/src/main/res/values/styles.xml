<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsTheme" parent="Theme.PlaylistMaker">
        <item name="android:windowBackground">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>

    </style>

    <style name="SearchTheme" parent="Theme.PlaylistMaker">
        <item name="android:windowBackground">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="colorAccent">@color/YPBlue</item>
    </style>

    <style name="SettingsTextViewStyle" parent="SettingsTheme">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textFontWeight">@integer/font_weight_400</item>
        <item name="android:textSize">@dimen/settings_textSize</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:paddingTop">@dimen/padding_19</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:paddingBottom">@dimen/padding_18</item>
    </style>

    <style name="SettingsIconStyle" parent="SettingsTheme">
        <item name="android:tint">?attr/colorSecondaryVariant</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:paddingTop">@dimen/padding_19</item>
        <item name="android:paddingStart">@dimen/padding_8</item>
    </style>

    <style name="roundedEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:shape">rectangle</item>
        <item name="android:textColorHint">@color/YPTextGray</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">@color/YPBlack</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">@dimen/padding_12</item>
        <item name="android:drawablePadding">@dimen/padding_12</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableTint">?colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsBackArrowStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:paddingHorizontal">@dimen/padding_12</item>
        <item name="android:paddingVertical">@dimen/padding_12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginVertical">@dimen/margin_4</item>
        <item name="android:layout_marginStart">@dimen/margin_4</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="SwitchCompat" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:backgroundTint">@color/YPLightGray</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:checked">false</item>
        <item name="android:paddingVertical">@dimen/padding_11</item>
        <item name="android:paddingStart">@dimen/padding_9</item>
        <item name="thumbTint">@color/YPTextGray</item>
        <item name="trackTint">@color/YPLightGray</item>
    </style>

    <style name="SearchIconStyle" parent="SettingsTheme">
        <item name="android:tint">@color/YPTextGray</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/margin_12</item>
    </style>

    <style name="SearchSmthWrongTextView" parent="SettingsTheme">
        <item name="android:textColor">@color/searchSmthWrong</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textSize_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/font_weight_400</item>
    </style>

    <style name="TrackSmallTVStyle" parent="SearchTheme">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="AudioPlayerLabelStyle" parent="SettingsTheme">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/labelText</item>
        <item name="android:textFontWeight">@integer/font_weight_400</item>
        <item name="android:textSize">@dimen/textSize_13</item>
        <item name="android:paddingTop">@dimen/padding_9</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
    </style>

    <style name="AudioPlayerTextViewStyle" parent="SettingsTheme">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textFontWeight">@integer/font_weight_400</item>
        <item name="android:textSize">@dimen/textSize_13</item>
        <item name="android:paddingTop">@dimen/padding_9</item>
        <item name="android:paddingBottom">@dimen/padding_8</item>
    </style>

// Медиатека
    <style name="LibraryToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/font_weight_500</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="titleTextColor">@color/textColor</item>
        <item name="android:layout_gravity">top</item>
        <item name="titleMarginStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>

    </style>

    <style name="LibraryTabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@integer/font_weight_500</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="tabTextColor">@color/textColor</item>
        <item name="android:background">@color/playerBackgroundColor</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorColor">@color/background</item>
    </style>

    <style name="FragmentPlaylistButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@integer/font_weight_500</item>
        <item name="android:textSize">@dimen/textSize_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:backgroundTint">@color/buttonFillColor</item>
        <item name="cornerRadius">54dp</item>
    </style>

    // Main Activity
    <style name="BottomNavMenuStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">@integer/font_weight_400</item>
        <item name="android:textSize">@dimen/textSize_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="itemTextColor">@color/bottom_navigation_selector</item>
        <item name="itemIconTint">@color/bottom_navigation_selector</item>
        <item name="itemActiveIndicatorStyle">@color/playerBackgroundColor</item>
        <item name="android:background">@color/playerBackgroundColor</item>
    </style>

    //New Playlist
    <style name="CreatePlaylistButtonStyle" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">@integer/font_weight_500</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/create_playlist_button_shape</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="CreatePlaylistToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CreatePlaylistToolbarStyle" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="android:background">@color/playerBackgroundColor</item>
        <item name="titleTextColor">@color/textColor</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="hintTextColor">#243897</item>
    </style>

    <style name="RoundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MyAlertDialogTheme" parent="">
        <item name="textColorAlertDialogListItem">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColorPrimary">@color/YPBlack</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogButton</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/YPBlue</item>
    </style>

    <style name="DetailsStyle" parent="">
        <item name="android:background">@color/details_background</item>

    </style>


</resources>