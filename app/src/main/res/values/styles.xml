<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_8</item>
        <item name="iconTint">@color/textColor</item>
        <item name="cornerRadius">@dimen/cornerRadius_16</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/textSize_22</item>
        <item name="android:layout_marginEnd">52dp</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingBottom">@dimen/padding_12</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
    </style>
    <style name="SettingsTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_textSize</item>
        <item name="android:layout_marginStart">@dimen/margin_4</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:layout_marginEnd">@dimen/margin_4</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/padding_19</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:paddingBottom">@dimen/padding_18</item>
        <item name="android:textColor">@color/YPBlack</item>
    </style>
    <style name="SettingsIconStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="android:paddingTop">@dimen/padding_19</item>
        <item name="android:paddingStart">@dimen/padding_8</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
    </style>
    <style name="roundedEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:shape">rectangle</item>
        <item name="android:textColorHint">@color/YPTextGray</item>
        <item name="android:textSize">@dimen/textSize_16</item>
        <item name="android:textColor">@color/YPBlack</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingVertical">@dimen/padding_10</item>
        <item name="android:drawablePadding">@dimen/padding_10</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableTint">@color/YPTextGray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SearchIconStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_marginEnd">@dimen/margin_12</item>
        <item name="tint">@color/YPTextGray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
    </style>
    <style name="SwitchCompat" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:backgroundTint">@color/YPLightGray</item>
        <item name="android:elevation">@color/YPTextGray</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:layout_marginEnd">@dimen/margin_4</item>
        <item name="android:checked">false</item>
        <item name="android:paddingVertical">@dimen/padding_11</item>
        <item name="android:paddingStart">@dimen/padding_9</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="thumbTint">@color/YPTextGray</item>
        <item name="trackTint">@color/YPLightGray</item>
    </style>
</resources>