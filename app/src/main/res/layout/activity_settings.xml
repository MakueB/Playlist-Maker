<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="6dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:padding="@dimen/padding_12"
            android:src="@drawable/light_modearrow_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="52dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_12"
            android:paddingEnd="86dp"
            android:paddingTop="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_12"
            android:text="@string/settings_title"
            android:textColor="@color/YPBlack"
            android:textSize="@dimen/textSize" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:paddingStart="@dimen/margin_16"
            android:paddingEnd="6dp"
            android:paddingTop="@dimen/padding_19"
            android:paddingBottom="@dimen/padding_18"
            android:text="@string/dark_theme"
            android:textColor="@color/YPBlack"
            android:textSize="@dimen/settings_textSize" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/YPLightGray"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginEnd="6dp"
            android:checked="false"
            android:paddingTop="@dimen/padding_11"
            android:paddingBottom="@dimen/padding_11"
            android:paddingStart="9dp"
            android:paddingEnd="@dimen/padding_12" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:paddingStart="@dimen/margin_16"
            android:paddingTop="@dimen/padding_19"
            android:paddingEnd="@dimen/padding_12"
            android:paddingBottom="@dimen/padding_18"
            android:text="@string/share"
            android:textColor="@color/YPBlack"
            android:textSize="@dimen/settings_textSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/padding_12"
            android:paddingTop="@dimen/padding_19"
            android:paddingEnd="@dimen/padding_12"
            android:paddingStart="@dimen/padding_8"
            android:src="@drawable/share" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:paddingStart="@dimen/margin_16"
            android:paddingTop="@dimen/padding_19"
            android:paddingEnd="@dimen/padding_12"
            android:paddingBottom="@dimen/padding_18"
            android:text="@string/call_support"
            android:textColor="@color/YPBlack"
            android:textSize="@dimen/settings_textSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/padding_12"
            android:paddingTop="@dimen/padding_19"
            android:paddingEnd="@dimen/padding_12"
            android:paddingStart="@dimen/padding_8"
            android:src="@drawable/support" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:paddingStart="@dimen/margin_16"
            android:paddingTop="@dimen/padding_19"
            android:paddingEnd="@dimen/padding_12"
            android:paddingBottom="@dimen/padding_18"
            android:text="@string/user_agreement"
            android:textColor="@color/YPBlack"
            android:textSize="@dimen/settings_textSize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/padding_12"
            android:paddingTop="@dimen/padding_19"
            android:paddingStart="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_12"
            android:src="@drawable/arrow_forward" />
    </FrameLayout>
</LinearLayout>